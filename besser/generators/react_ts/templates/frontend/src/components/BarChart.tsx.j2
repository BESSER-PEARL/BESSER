import React, { useEffect, useState } from "react";
import {
  BarChart,
  Bar,
  XAxis,
  YAxis,
  CartesianGrid,
  Tooltip,
  Legend,
  ResponsiveContainer,
} from "recharts";

interface BarChartComponentProps {
  endpoint?: string;
  xKey?: string;
  dataKey?: string;
  barColor?: string;
  axisColor?: string;
  fontSize?: number;
  gridColor?: string;
  barWidth?: number;
}
{% raw %}
const BarChartComponent: React.FC<BarChartComponentProps> = ({
  endpoint = "",
  xKey = "",
  dataKey = "",
  barColor = "#8884d8",
  axisColor = "#333",
  fontSize = 12,
  gridColor = "#ccc",
  barWidth = 20,
}) => {
  const [data, setData] = useState<any[]>([]);

  useEffect(() => {
    fetch(endpoint)
      .then((res) => res.json())
      .then((json) => {
        setData(json);
      });
  }, [endpoint]);

  return (
    <div style={{ width: "100%", height: "100%" }}>
      <h3
        style={{
          textAlign: "center",
          margin: "4px 0",
          fontSize: fontSize + 2,
          color: axisColor,
        }}
      >
      </h3>
      <ResponsiveContainer width="100%" height="100%">
        <BarChart
          data={data}
          margin={{ top: 20, right: 30, left: 20, bottom: 5 }}
        >
          <CartesianGrid stroke={gridColor} strokeDasharray="3 3" />
          <XAxis
            dataKey={xKey}
            stroke={axisColor}
            tick={{ fontSize, fill: axisColor }}
          />
          <YAxis
            stroke={axisColor}
            tick={{ fontSize, fill: axisColor }}
          />
          <Tooltip />
          <Legend />
          <Bar
            dataKey={dataKey}
            fill={barColor}
            barSize={barWidth}
          />
        </BarChart>
      </ResponsiveContainer>
    </div>
  );
};

export default BarChartComponent;
