import React, { useEffect, useState } from "react";
import {
  LineChart,
  Line,
  XAxis,
  YAxis,
  CartesianGrid,
  Tooltip,
  Legend,
  ResponsiveContainer,
} from "recharts";

interface LineChartComponentProps {
  endpoint?: string;
  xKey?: string;
  dataKey?: string;
  title?: string;
  lineColor?: string;
  axisColor?: string;
  fontSize?: number;
  gridColor?: string;
  lineWidth?: number;
}
{% raw %}
const LineChartComponent: React.FC<LineChartComponentProps> = ({
  endpoint = "",
  xKey = "",
  dataKey = "",
  title,
  lineColor = "#8884d8",
  axisColor = "#333",
  fontSize = 12,
  gridColor = "#ccc",
  lineWidth = 2,
}) => {
  const [data, setData] = useState<any[]>([]);

  useEffect(() => {
    fetch(endpoint)
      .then((res) => res.json())
      .then((json) => {
        setData(json);
      });
  }, [endpoint]);

  return (
    <div style={{ width: "100%", height: "100%" }}>
      <h3
        style={{
          textAlign: "center",
          margin: "4px 0",
          fontSize: fontSize + 2,
          color: axisColor,
        }}
      >
        {title ?? ""}
      </h3>
      <ResponsiveContainer width="100%" height="100%">
        <LineChart
          data={data}
          margin={{ top: 20, right: 30, left: 20, bottom: 5 }}
        >
          <CartesianGrid stroke={gridColor} strokeDasharray="3 3" />
          <XAxis
            dataKey={xKey}
            stroke={axisColor}
            tick={{ fontSize, fill: axisColor }}
          />
          <YAxis
            stroke={axisColor}
            tick={{ fontSize, fill: axisColor }}
          />
          <Tooltip />
          <Legend />
          <Line
            type="monotone"
            dataKey={dataKey}
            stroke={lineColor}
            strokeWidth={lineWidth}
            activeDot={{ r: 8 }}
          />
        </LineChart>
      </ResponsiveContainer>
    </div>
  );
};

export default LineChartComponent;
