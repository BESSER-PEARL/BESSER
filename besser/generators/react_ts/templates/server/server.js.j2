// Basic Express server to connect to SQLite and expose API endpoints
const express = require('express');
const sqlite3 = require('sqlite3').verbose();
const cors = require('cors');

const app = express();
const PORT = 3001;

app.use(cors());

// Connect to SQLite database
const db = new sqlite3.Database('./mydb.db', (err) => {
  if (err) {
    console.error('Error opening database:', err.message);
  } else {
    console.log('Connected to SQLite database.');
  }
});

{% for cls in data_model.get_classes() %}
// endpoint to get {{ cls.name }} data
app.get('/api/{{ cls.name | lower }}-data', (req, res) => {
  db.all('SELECT id{% for attr in cls.attributes %}, {{ attr.name }}{% endfor %} FROM {{ cls.name | lower }}', [], (err, rows) => {
    if (err) {
      res.status(500).json({ error: err.message });
    } else {
      res.json(rows);
    }
  });
});

{% endfor %}

app.listen(PORT, () => {
  console.log(`Server running on http://localhost:${PORT}`);
});

// Additional middleware for JSON parsing
app.use(express.json());
